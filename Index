    <!-- Scripts -->
    <script src="script.js"></script>
    
    <!-- Script de inicialización -->
    <script>
        // Eliminar clase no-fouc cuando todo esté cargado
        document.addEventListener('DOMContentLoaded', function() {
            document.body.classList.remove('no-fouc');
            document.body.classList.add('fouc-ready');
            
            // Configurar funciones adicionales
            window.viewImage = function(button) {
                const noteItem = button.closest('.note-item');
                const img = noteItem.querySelector('.note-image');
                const caption = noteItem.querySelector('.note-caption').textContent;
                
                document.getElementById('modal-image').src = img.src;
                document.getElementById('modal-caption').textContent = caption;
                document.getElementById('modal-title').textContent = 'Mi Apunte';
                
                document.getElementById('image-modal').style.display = 'block';
            };
            
            window.closeModal = function() {
                document.getElementById('image-modal').style.display = 'none';
            };
            
            window.toggleModuleComplete = function(moduleId) {
                const checkbox = document.getElementById(`complete-mod${moduleId}`);
                const isChecked = checkbox.checked;
                
                // Aquí podrías guardar en localStorage o en el estado
                console.log(`Módulo ${moduleId} ${isChecked ? 'completado' : 'pendiente'}`);
                
                // Actualizar interfaz
                const moduleSection = document.querySelector(`#modulo${moduleId}`);
                if (isChecked) {
                    moduleSection.classList.add('module-completed');
                } else {
                    moduleSection.classList.remove('module-completed');
                }
            };
            
            window.addServiceHours = function(hours) {
                const currentElement = document.getElementById('service-hours');
                let current = parseInt(currentElement.textContent) || 0;
                current += hours;
                if (current > 320) current = 320;
                currentElement.textContent = current;
                
                // Actualizar barra de progreso
                const progress = (current / 320) * 100;
                const progressFill = document.querySelector('#servicio-social .progress-fill');
                if (progressFill) {
                    progressFill.style.width = `${progress}%`;
                }
            };
            
            window.resetServiceHours = function() {
                document.getElementById('service-hours').textContent = '0';
                const progressFill = document.querySelector('#servicio-social .progress-fill');
                if (progressFill) {
                    progressFill.style.width = '0%';
                }
            };
            
            window.showAllCourses = function() {
                alert('En una implementación completa, esto mostraría todos los 15 cursos de especialización.');
            };
            
            // Cerrar modal al hacer clic fuera
            window.onclick = function(event) {
                const modal = document.getElementById('image-modal');
                if (event.target === modal) {
                    closeModal();
                }
            };
        });
    </script>
</body>
</html>
